{
  "embedder": {
    "client_class": "OpenAIClient",
    "batch_size": 500,
    "model_kwargs": {
      "model": "${OPENAI_EMBEDDING_MODEL:-text-embedding-3-small}",
      "dimensions": 256,
      "encoding_format": "float"
    }
  },
  "embedder_ollama": {
    "client_class": "OllamaClient",
    "model_kwargs": {
      "model": "${OLLAMA_EMBEDDING_MODEL:-nomic-embed-text}"
    }
  },
  "embedder_google": {
    "client_class": "GoogleEmbedderClient",
    "batch_size": 100,
    "model_kwargs": {
      "model": "${GOOGLE_EMBEDDING_MODEL:-text-embedding-004}",
      "task_type": "SEMANTIC_SIMILARITY"
    }
  },
  "embedder_openrouter": {
    "client_class": "OpenRouterClient",
    "batch_size": 500,
    "model_kwargs": {
      "model": "${OPENROUTER_EMBEDDING_MODEL:-openai/text-embedding-3-small}"
    }
  },
  "retriever": {
    "top_k": 25
  },
  "text_splitter": {
    "split_by": "word",
    "chunk_size": 600,
    "chunk_overlap": 120
  }
}
